<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/gamesListFragment">

    <fragment
        android:id="@+id/gamesListFragment"
        android:name="mg.maniry.tenymana.ui.gamesList.GamesListFragment"
        android:label="GamesListFragment"
        tools:layout="@layout/games_list_screen">
        <action
            android:id="@+id/listToPuzzle"
            app:destination="@id/puzzleFragment" />
    </fragment>

    <fragment
        android:id="@+id/puzzleFragment"
        android:name="mg.maniry.tenymana.ui.puzzle.PuzzleFragment"
        android:label="puzzle_screen"
        tools:layout="@layout/puzzle_screen" >
        <action
            android:id="@+id/puzzleToList"
            app:destination="@id/gamesListFragment" />
    </fragment>

</navigation>

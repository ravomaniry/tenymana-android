<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blueDark</item>
        <item name="colorAccent">@color/red</item>
        <item name="buttonStyle">@style/AppTheme.Button</item>
    </style>

    <style name="AppTheme.ScoreTV">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:background">@drawable/bg_dark_rounded_corner</item>
        <item name="android:textColor">@color/light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <style name="AppTheme.Title1" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.DescriptionTextView" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="AppTheme.Button" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:drawablePadding">4dp</item>
    </style>

    <!-- Journeys list -->
    <style name="AppTheme.GamesListScore" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/light</item>
        <item name="android:gravity">center</item>
        <item name="drawableTint">@color/light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <!-- Puzzle screen -->
    <style name="AppTheme.PuzzleBody">
        <item name="android:padding">4dp</item>
    </style>
</resources>
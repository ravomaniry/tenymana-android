<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blueDark</item>
        <item name="colorSecondary">@color/green</item>
        <item name="colorAccent">@color/red</item>
        <item name="buttonStyle">@style/AppTheme.Button</item>
    </style>

    <style name="AppTheme.ScoreTV">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:background">@drawable/bg_dark_rounded_corner</item>
        <item name="android:textColor">@color/light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <style name="AppTheme.Title1" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="AppTheme.Title1Light" parent="AppTheme.Title1">
        <item name="android:textColor">@color/light</item>
    </style>

    <style name="AppTheme.Title2" parent="AppTheme.Title1">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTheme.Title3" parent="AppTheme.Title1">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.Title2Light" parent="AppTheme.Title2">
        <item name="android:textColor">@color/light</item>
    </style>

    <style name="AppTheme.DarkMainCont">
        <item name="android:background">@color/blue</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="AppTheme.DescriptionTextView" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textStyle">italic</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="AppTheme.Button" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:drawablePadding">4dp</item>
    </style>

    <style name="AppTheme.LeftRightBtn" parent="Widget.AppCompat.Button.Small">
        <item name="android:background">#886200EE</item>
        <item name="color">@color/blue</item>
        <item name="android:color">@color/blue</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="AppTheme.BottomBtn" parent="AppTheme.Button">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="AppTheme.RightFloatingImg">
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="AppTheme.ImageBtnPrimary">
        <item name="android:background">@drawable/bg_primary_rounded_corner</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <!-- Journeys list -->
    <style name="AppTheme.AppTitle">
        <item name="android:textColor">@color/light</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/bg_app_title</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/kaushan_script_regular</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
    </style>

    <style name="AppTheme.GamesListCont">
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/bg_list_out</item>
    </style>

    <style name="AppTheme.GamesList">
        <item name="android:background">@drawable/bg_list_inner</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="AppTheme.GamesListScore" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/light</item>
        <item name="android:gravity">center</item>
        <item name="drawableTint">@color/light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <!-- Paths list -->
    <style name="AppTheme.PathsListCont">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">6dp</item>
    </style>

    <style name="AppTheme.PathsListVerse" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/kaushan_script_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/light</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AppTheme.DescriptionText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/kaushan_script_regular</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="AppTheme.Card" parent="Widget.MaterialComponents.CardView">
        <item name="android:background">@drawable/bg_card</item>
        <item name="android:padding">6dp</item>
    </style>

    <!-- Puzzle screen -->
    <style name="AppTheme.PuzzleBody">
        <item name="android:padding">4dp</item>
    </style>

    <style name="AppTheme.LinkClearPuzzleBody" parent="AppTheme.PuzzleBody">
        <item name="android:background">@drawable/bg_green</item>
    </style>

    <style name="AppTheme.HiddenWordsPuzzleBody" parent="AppTheme.PuzzleBody">
        <item name="android:background">@drawable/bg_red</item>
    </style>

    <style name="AppTheme.BonusBtnCont">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="AppTheme.BonusBtn">
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@drawable/bg_bonus_btn</item>
    </style>

    <style name="AppTheme.RoundBtn">
        <item name="android:padding">2dp</item>
    </style>

    <style name="AppTheme.RoundGreenBtn" parent="AppTheme.RoundBtn">
        <item name="android:background">@drawable/bg_round_green</item>
    </style>

    <style name="AppTheme.RoundRedBtn" parent="AppTheme.RoundBtn">
        <item name="android:background">@drawable/bg_round_red</item>
    </style>

    <style name="AppTheme.HwProposition" parent="TextAppearance.AppCompat.Body1">
        <item name="android:minWidth">80dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:background">@drawable/bg_rounded_white</item>
    </style>

    <style name="AppTheme.HwArrowBtn" parent="AppTheme.ImageBtnPrimary">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="AppTheme.AnagramBody">
        <item name="android:background">@drawable/bg_blue</item>
    </style>

    <!-- Solution screen -->
    <style name="AppTheme.VerseTexView" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="AppTheme.VerseRowItem" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
</resources>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blueDark</item>
        <item name="colorSecondary">@color/green</item>
        <item name="colorAccent">@color/red</item>
        <item name="buttonStyle">@style/AppTheme.Button</item>
    </style>

    <style name="AppTheme.ScoreTV">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:background">@drawable/bg_dark_rounded_corner</item>
        <item name="android:textColor">@color/light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <style name="AppTheme.Title1" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="AppTheme.Title1Light" parent="AppTheme.Title1">
        <item name="android:textColor">@color/light</item>
    </style>

    <style name="AppTheme.Title2" parent="AppTheme.Title1">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTheme.Title3" parent="AppTheme.Title1">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.Title2Light" parent="AppTheme.Title2">
        <item name="android:textColor">@color/light</item>
    </style>

    <style name="AppTheme.DarkMainCont">
        <item name="android:background">@color/blue</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="AppTheme.DescriptionTextView" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textStyle">italic</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="AppTheme.Button" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:drawablePadding">4dp</item>
    </style>

    <style name="AppTheme.LeftRightBtn" parent="Widget.AppCompat.Button.Small">
        <item name="android:background">#886200EE</item>
        <item name="color">@color/blue</item>
        <item name="android:color">@color/blue</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="AppTheme.BottomBtn" parent="AppTheme.Button">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="AppTheme.RightFloatingImg">
        <item name="android:layout_gravity">end</item>
    </style>

    <!-- Journeys list -->
    <style name="AppTheme.GamesListScore" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/light</item>
        <item name="android:gravity">center</item>
        <item name="drawableTint">@color/light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <!-- Paths list -->
    <style name="AppTheme.PathsListCont">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">6dp</item>
    </style>

    <style name="AppTheme.PathsListVerse" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">cursive</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/light</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AppTheme.DescriptionText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">cursive</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <!-- Puzzle screen -->
    <style name="AppTheme.PuzzleBody">
        <item name="android:padding">4dp</item>
    </style>

    <!-- Solution screen -->
    <style name="AppTheme.VerseTexView" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_margin">5dp</item>
    </style>
</resources>
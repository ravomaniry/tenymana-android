<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/linkClearPuzzle"
        style="@style/AppTheme.PuzzleBody"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <mg.maniry.tenymana.ui.game.puzzle.views.VerseView
                android:id="@+id/verseView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_height="60dp" />

        </androidx.cardview.widget.CardView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <mg.maniry.tenymana.ui.game.puzzle.views.CharGridView
                android:id="@+id/charsGrid"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <mg.maniry.tenymana.ui.game.puzzle.views.CharGridInput
                android:id="@+id/charsGridInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

        <mg.maniry.tenymana.ui.game.puzzle.views.BonusView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue"
            tools:layout_height="40dp" />

    </LinearLayout>

</layout>

<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="gameVM"
            type="mg.maniry.tenymana.ui.game.GameViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@{gameVM.colors.primary}"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp"
            tools:background="@color/colorPrimary">

            <ImageView
                android:layout_width="36sp"
                android:layout_height="36sp"
                android:contentDescription="@string/app_menu_desc"
                android:src="@drawable/ic_light_menu" />

            <TextView
                style="@style/AppTheme.ScoreTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@{gameVM.displayVerse}"
                tools:drawableLeftCompat="@drawable/ic_book"
                tools:text="Matthiew 1:1" />

            <FrameLayout
                android:id="@+id/headerSeparator"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                style="@style/AppTheme.ScoreTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{gameVM.score}"
                tools:drawableRightCompat="@drawable/ic_star"
                tools:text="100" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/bg_gradient_gray_up" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>
